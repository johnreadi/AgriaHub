{
  "name": "agria-hub-production",
  "version": "1.0.0",
  "description": "AgriaHub - Plateforme de gestion agricole",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm ci && npm run build",
    "deploy": "node deploy.js",
    "postinstall": "npm run build:frontend",
    "deploy:dokploy": "bash scripts/deploy-dokploy.sh",
    "setup": "node scripts/setup.js",
    "test": "node scripts/test-deployment.js",
    "backup": "bash scripts/backup.sh",
    "logs": "docker-compose logs -f",
    "status": "docker-compose ps",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "heroku-postbuild": "npm run build:frontend"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/agria-hub.git"
  },
  "keywords": [
    "agria",
    "restaurant",
    "dokploy",
    "production",
    "deployment"
  ],
  "author": "AGRIA ROUEN",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  }
}