# Variables d'environnement pour AGRIA Hub - Production
# Copiez ce fichier vers .env et modifiez les valeurs

# =============================================================================
# BASE DE DONNÉES
# =============================================================================
DB_HOST=database
DB_NAME=agria_production
DB_USER=agria_user
DB_PASS=CHANGEZ_MOI_MOT_DE_PASSE_SECURISE
DB_ROOT_PASS=CHANGEZ_MOI_ROOT_PASSWORD_SECURISE

# =============================================================================
# SÉCURITÉ
# =============================================================================
JWT_SECRET=CHANGEZ_MOI_JWT_SECRET_TRES_LONG_ET_SECURISE
REDIS_PASSWORD=CHANGEZ_MOI_REDIS_PASSWORD

# =============================================================================
# EMAIL / SMTP
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-app
SMTP_FROM=noreply@agriarouen.fr
SMTP_FROM_NAME=AGRIA ROUEN

# =============================================================================
# DOMAINE ET SSL
# =============================================================================
DOMAIN=mobile.agriarouen.fr
SSL_EMAIL=admin@agriarouen.fr

# =============================================================================
# API EXTERNES
# =============================================================================
GEMINI_API_KEY=votre-cle-api-gemini
GITHUB_TOKEN=votre-token-github

# =============================================================================
# MONITORING ET LOGS
# =============================================================================
LOG_LEVEL=info
MONITORING_ENABLED=true
BACKUP_ENABLED=true

# =============================================================================
# DOKPLOY
# =============================================================================
DOKPLOY_API_URL=https://dokploy.agriarouen.fr
DOKPLOY_API_TOKEN=votre-token-dokploy

# =============================================================================
# NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
ADMIN_EMAIL=admin@agriarouen.fr

# =============================================================================
# SAUVEGARDES
# =============================================================================
BACKUP_S3_BUCKET=agria-backups
BACKUP_S3_ACCESS_KEY=votre-access-key
BACKUP_S3_SECRET_KEY=votre-secret-key
BACKUP_S3_REGION=eu-central-1

# =============================================================================
# DÉVELOPPEMENT (à supprimer en production)
# =============================================================================
NODE_ENV=production
PHP_ENV=production
DEBUG=false